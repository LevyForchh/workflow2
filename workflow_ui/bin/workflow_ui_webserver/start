#!/bin/bash

MAIN_CLASS="com.liveramp.workflow_ui.WorkflowDbWebServer"

mkdir -p log

if [[ -z "$(ps ax | grep $MAIN_CLASS | grep -v grep)" ]]; then
  cd /apps/workflow_ui/current
  nohup java -Djava.io.tmpdir=/var/www/tmp -Xmx12000m -Dlog4j.configuration=config/drfa.log4j.xml -Djava.net.preferIPv4Stack=true -cp workflow_ui.job.jar $MAIN_CLASS $* > log/workflow_ui.out 2> log/workflow_ui.err < /dev/null &
else
  echo "Workflow UI already running!"
  exit 1
fi

